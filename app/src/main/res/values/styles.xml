<resources>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_settings</item>
    </style>

    <style name="RoundedGradientButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_corners_gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_extra_large</item>
    </style>

    <style name="RoundedGradientButtonInactive" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_gradient_button_inactive</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_extra_large</item>
    </style>

    <style name="RoundedFacebookButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_corners_facebook_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_extra_large</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/size_sub_headline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/size_sub_headline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/size_headline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
    </style>

    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textSize">@dimen/size_sub_headline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressSpinner" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:tint">@color/blue_accent</item>
    </style>

    <style name="SubtitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
    </style>

    <style name="ShadowedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="StandardModalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_size_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_size_extra_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_size_medium</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_small</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_small</item>
        <item name="android:textSize">@dimen/size_sub_headline</item>
    </style>
    <style name="SwitchCompatTheme" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlNormal">@color/green_ok</item>
    </style>

</resources>
