<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.InputType" />

        <variable
                name="addFields"
                type="com.bink.wallet.model.response.membership_plan.AddFields" />

        <variable
                name="authFields"
                type="com.bink.wallet.model.response.membership_plan.AuthoriseFields" />

        <variable
                name="addFieldsRequest"
                type="com.bink.wallet.model.request.membership_card.AddFields" />

        <variable
                name="authFieldsRequest"
                type="com.bink.wallet.model.request.membership_card.AuthoriseFields" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

        <TextView
                android:id="@+id/title_add_auth_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_size_medium"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_medium"
                android:textStyle="bold"
                app:addField="@{addFields}"
                app:authField="@{authFields}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/content_add_auth_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_size_medium"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                android:background="@android:color/transparent"
                android:inputType='@{(addFields.type == 1 || authFields.type == 1) ? (InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD) : InputType.TYPE_CLASS_TEXT }'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_add_auth_text" />

        <View
                android:layout_width="0dp"
                android:layout_height="@dimen/item_separator_line_height"
                android:layout_marginStart="@dimen/margin_padding_size_medium"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_add_auth_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>