<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.bink.wallet.scenes.loyalty_wallet.barcode.BarcodeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/TitleTextView"
            android:layout_marginStart="@dimen/title_margin"
            android:layout_marginTop="@dimen/title_margin"
            android:layout_marginBottom="@dimen/title_margin"
            android:text="@{viewModel.membershipPlan.account.company_name}"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/barcode_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/barcode_height"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/barcode_margin_top"
            android:layout_marginEnd="@dimen/margin_padding_size_medium"
            android:adjustViewBounds="true"
            app:isVisible="@{viewModel.isBarcodeAvailable}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:membershipCard="@{viewModel.barcode}"
            app:viewModel="@{viewModel}"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/bottom_bar" />

        <TextView
            android:id="@+id/barcode_not_displayed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/barcode_margin_top"
            android:layout_marginEnd="@dimen/margin_padding_size_medium"
            android:text="@string/no_barcode_displayed"
            android:textAlignment="center"
            android:textSize="@dimen/size_sub_headline"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <TextView
            android:id="@+id/barcode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/margin_padding_size_large"
            android:text="@string/barcode_label"
            android:textSize="@dimen/size_headline"
            android:textStyle="bold"
            app:isVisible="@{viewModel.isBarcodeAvailable}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_image" />

        <TextView
            android:id="@+id/barcode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:text="@{viewModel.barcodeNumber}"
            android:textSize="@dimen/size_sub_headline"
            android:textStyle="bold"
            app:isVisible="@{viewModel.isBarcodeAvailable}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_label"
            tools:text="1234 5678 1233 2722" />

        <TextView
            android:id="@+id/card_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/title_margin"
            android:text="@string/barcode_card_number"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_headline"
            android:textStyle="bold"
            app:isVisible="@{viewModel.isCardNumberAvailable}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_number" />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/number_margin_top"
            android:text="@{viewModel.cardNumber}"
            android:textColor="@color/blue_accent"
            android:textSize="@dimen/size_sub_headline"
            android:textStyle="bold"
            app:isVisible="@{viewModel.isCardNumberAvailable}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_number_label"
            tools:text="1234 5678 9101" />

        <TextView
            android:id="@+id/barcode_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/description_margin_top"
            android:layout_marginEnd="@dimen/margin_padding_size_medium"
            android:textSize="@dimen/size_sub_headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_number"
            app:showNumberOrBarcodeDescription="@{viewModel.isBarcodeAvailable}"
            tools:text="@string/barcode_description" />

        <TextView
            android:id="@+id/barcode_added_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            android:layout_marginTop="@dimen/date_margin_top"
            android:textSize="@dimen/size_body"
            app:isVisible="@{viewModel.isBarcodeAvailable}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>