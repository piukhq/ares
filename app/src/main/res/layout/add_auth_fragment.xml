<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.bink.wallet.model.response.membership_plan.MembershipPlan" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/first_keyline"
                android:layout_marginEnd="@dimen/first_keyline"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                tools:ignore="ContentDescription" />

        <com.bink.wallet.ModalBrandHeader
                android:id="@+id/add_join_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_half_keyline"
                android:layout_marginEnd="@dimen/size_half_keyline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:membershipPlan="@{item}" />

        <TextView
                android:id="@+id/title_add_auth_text"
                style="@style/TitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/sign_up_text"
                app:layout_constraintTop_toBottomOf="@+id/add_join_reward" />

        <TextView
                android:id="@+id/description_add_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/first_keyline"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/first_keyline"
                android:letterSpacing="0"
                android:text="@{`Please enter your ` + item.account.plan_name + ` details below to add this card to your wallet`}"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_add_auth_text" />

        <ProgressBar
                android:id="@+id/progress_spinner"
                style="@style/ProgressSpinner"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/size_half_keyline"
                android:layout_marginTop="@dimen/size_half_keyline"
                android:layout_marginBottom="@dimen/size_half_keyline"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/auth_add_fields"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/add_card_button"
                app:layout_constraintTop_toBottomOf="@+id/description_add_auth" />

        <Button
                android:id="@+id/add_card_button"
                style="@style/RoundedGradientButton"
                android:layout_width="0dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="32dp"
                android:text="@string/sign_up_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auth_add_fields" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
