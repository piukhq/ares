<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/main_layout"
        android:background="@android:color/white"
        android:layout_height="110dp">

    <ImageView
            android:id="@+id/company_logo"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.bink.wallet.CardView
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:id="@+id/card_view"
                android:layout_width="match_parent"/>

        <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16.2dp"
                android:layout_marginEnd="18dp"
                android:id="@+id/value_wrapper"
                android:visibility="gone">

            <TextView
                    android:id="@+id/loyalty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16.2sp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="-3.6sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_gravity="end"/>

            <TextView
                    android:id="@+id/loyalty_value_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:textColor="@android:color/white"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="-0.9sp"
                    android:layout_gravity="end"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/card_login"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_login"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16.2dp"
                android:layout_marginEnd="10dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16.2dp"
                android:id="@+id/link_status_wrapper"
                android:layout_marginEnd="18dp"
                android:visibility="gone">

            <TextView
                    android:id="@+id/link_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:lineSpacingExtra="1.8sp"
                    android:gravity="end"
                    android:text="Linked"/>

            <ImageView
                    android:id="@+id/link_status_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_linked"
                    android:layout_marginStart="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>