<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="plan"
                type="com.bink.wallet.model.response.membership_plan.MembershipPlan" />
    </data>

    <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:background="@android:color/white"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/company_logo"
                android:layout_width="@dimen/card_height"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginEnd="@dimen/margin_padding_size_small"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                app:imageUrl="@{plan}"
                tools:ignore="ContentDescription" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.bink.wallet.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp" />

            <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/custom_text_card_margin"
                    android:text="@{plan.account.company_name}"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/value_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_padding_size_medium"
                    android:layout_marginEnd="@dimen/loyalty_value_margin_end"
                    android:orientation="vertical"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/loyalty_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_medium"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/loyalty_value_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_body" />

            </LinearLayout>

            <ImageView
                    android:id="@+id/card_login"
                    android:layout_width="@dimen/custom_login_image_size"
                    android:layout_height="@dimen/custom_text_card_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_padding_size_medium"
                    android:layout_marginEnd="@dimen/card_login_margin_end"
                    android:src="@drawable/ic_login"
                    tools:ignore="ContentDescription" />

            <LinearLayout
                    android:id="@+id/link_status_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/link_status_wrapper_margin_end"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/link_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/link_status_linked"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/size_body" />

                <ImageView
                        android:id="@+id/link_status_img"
                        android:layout_width="@dimen/margin_padding_size_medium"
                        android:layout_height="@dimen/margin_padding_size_medium"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_linked"
                        tools:ignore="ContentDescription" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>