<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <android.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" 
                app:layout_constraintEnd_toEndOf="parent"/>
        
        <View
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/header"
                android:layout_marginEnd="@dimen/first_keyline"
                android:layout_marginStart="@dimen/first_keyline"
                android:orientation="vertical" >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/link_payment_cards"
                    style="@style/HeaderTextView"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/link_payment_card_text"
                    style="@style/CustomTextView"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottom_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginEnd="@dimen/button_margin_end"
                android:layout_marginStart="@dimen/button_margin_start">

            <Button
                    android:id="@+id/button_done"
                    android:layout_width="match_parent"
                    style="@style/RoundedGradientButton"
                    android:text="@string/done_button"/>

            <TextView
                    android:id="@+id/button_add_payment_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_payment_cards"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>