<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            tools:context="com.bink.wallet.scenes.payment_card_wallet.PaymentCardWalletFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/payment_card_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
                android:id="@+id/no_payment_cards_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_medium"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    >
                <ImageView
                        android:id="@+id/no_payment_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_padding_size_medium"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_payment_card"
                        />
                <LinearLayout
                        android:id="@+id/no_payment_card_text_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_padding_size_medium"
                        android:layout_marginTop="@dimen/margin_padding_size_medium"
                        android:layout_marginBottom="@dimen/margin_padding_size_medium"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/no_payment_card_icon"
                        android:orientation="vertical"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_your_payment_cards"
                            android:textColor="@color/blue_accent"
                            android:textSize="@dimen/text_size_description_medium"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/you_will_need_to_add_at_least_one_to_collect_rewards_automatically"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_body_small"
                            />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
                android:id="@+id/progress_spinner"
                style="@style/ProgressSpinner"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/payment_card_recycler"
                app:layout_constraintStart_toStartOf="@+id/payment_card_recycler"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
