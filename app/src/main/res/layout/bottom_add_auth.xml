<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.bink.wallet.scenes.add_auth_enrol.AddAuthViewModel" />
    </data>

    <Button
            android:id="@+id/add_auth_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_selector"
            android:enabled="@{viewModel.haveValidationsPassed}"
            android:text="@{viewModel.ctaText}"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:visibility="gone"
            app:isVisible="@{!viewModel.isNoAccountFooter()}" />
</layout>