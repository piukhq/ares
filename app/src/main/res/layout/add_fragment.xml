<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".scenes.add.AddFragment">

        <androidx.cardview.widget.CardView android:layout_width="0dp"
                                           android:layout_height="150dp"
                                           android:id="@+id/loyalty_card_container"
                                           android:layout_marginBottom="16dp"
                                           app:layout_constraintBottom_toTopOf="@+id/browse_brands_container"
                                           app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:layout_marginStart="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="match_parent">

                <ImageView android:layout_width="44dp" android:layout_height="44dp"
                           android:id="@+id/loyalty_card_image"
                           app:layout_constraintBottom_toTopOf="@+id/loyalty_card_title"
                           android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="24dp"
                           android:src="@drawable/ic_card_add_icon_loyalty" tools:ignore="ContentDescription"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/loyalty_card_title" android:text="Add loyalty card"
                          android:layout_marginBottom="8dp"
                          android:textSize="25sp"
                          android:textStyle="bold"
                          android:textColor="@android:color/black"
                          app:layout_constraintBottom_toTopOf="@+id/loyalty_card_description"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp" android:textColor="@android:color/black"
                          android:id="@+id/loyalty_card_description" android:text="Scan a card you already have"
                          android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView android:layout_width="0dp"
                                           android:layout_height="150dp"
                                           android:id="@+id/browse_brands_container" android:layout_marginBottom="16dp"
                                           app:layout_constraintBottom_toTopOf="@+id/payment_card_container"
                                           app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:layout_marginStart="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="match_parent">

                <ImageView android:layout_width="44dp" android:layout_height="44dp"
                           android:id="@+id/browse_brands_image"
                           app:layout_constraintBottom_toTopOf="@+id/browse_brands_title" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                           android:src="@drawable/ic_card_add_icon_browse"
                           android:layout_marginStart="24dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/browse_brands_title" android:text="Browse brands"
                          android:layout_marginBottom="8dp"
                          android:textSize="25sp"
                          android:textStyle="bold"
                          android:textColor="@android:color/black"
                          app:layout_constraintBottom_toTopOf="@+id/browse_brands_description"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp" android:textColor="@android:color/black"
                          android:id="@+id/browse_brands_description" android:text="Find and join loyalty schemes"
                          android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView android:layout_width="0dp"
                                           android:layout_height="150dp"
                                           android:id="@+id/payment_card_container" android:layout_marginBottom="32dp"
                                           app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                                           app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:layout_marginStart="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="match_parent">

                <ImageView android:layout_width="44dp" android:layout_height="44dp"
                           android:id="@+id/payment_card_image"
                           app:layout_constraintBottom_toTopOf="@+id/payment_card_title" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                           android:src="@drawable/ic_card_add_icon_payment"
                           android:layout_marginStart="24dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="22dp"
                           android:id="@+id/card_payment_mastercard"
                           android:src="@drawable/ic_card_add_payment_providers_mastercard"
                           app:layout_constraintStart_toEndOf="@+id/payment_card_image"
                           android:layout_marginStart="16dp"
                           app:layout_constraintBottom_toTopOf="@+id/payment_card_title" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="22dp"
                           android:id="@+id/card_payment_amex"
                           android:src="@drawable/ic_card_add_payment_providers_amex"
                           app:layout_constraintStart_toEndOf="@+id/card_payment_mastercard"
                           app:layout_constraintBottom_toTopOf="@+id/payment_card_title" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="22dp"
                           android:id="@+id/card_payment_visa"
                           android:src="@drawable/ic_card_add_payment_providers_visa"
                           app:layout_constraintStart_toEndOf="@+id/card_payment_amex" android:layout_marginStart="8dp"
                           app:layout_constraintBottom_toTopOf="@+id/payment_card_title" android:layout_marginTop="8dp"
                           app:layout_constraintTop_toTopOf="parent"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/payment_card_title" android:text="Add payment card"
                          android:layout_marginBottom="8dp"
                          android:textSize="25sp"
                          android:textStyle="bold"
                          android:textColor="@android:color/black"
                          app:layout_constraintBottom_toTopOf="@+id/payment_card_description"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textSize="18sp" android:textColor="@android:color/black"
                          android:id="@+id/payment_card_description" android:text="Scan and link your payment card"
                          android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView android:layout_width="54dp" android:layout_height="54dp" android:id="@+id/cancel_button"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                   app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                   android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/ic_cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>