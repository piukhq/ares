<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    <variable
            name="paymentCard"
            type="com.bink.wallet.scenes.pll.PllPaymentCardWrapper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/margin_padding_size_extra_large"
                android:layout_height="@dimen/margin_padding_size_extra_large"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:image="@{paymentCard.paymentCard}"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

        <TextView
                android:id="@+id/card_title"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_padding_size_large"
                android:text="@{paymentCard.paymentCard.card.name_on_card}"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Business" />

        <TextView
                android:id="@+id/card_digits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="@dimen/margin_padding_size_large"
                android:text="@{String.format(@string/pll_last_digits, paymentCard.paymentCard.card.last_four_digits)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/card_title"
                tools:text="Card ending in 1234" />

        <Switch
                android:id="@+id/toggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_padding_size_medium_large"
                android:layout_marginEnd="@dimen/margin_padding_size_small"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:layout_editor_absoluteX="43dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>