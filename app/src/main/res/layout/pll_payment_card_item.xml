<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    <variable
            name="paymentCard"
            type="com.bink.wallet.model.response.payment_card.PllPaymentCardWrapper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/margin_padding_size_extra_large"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                app:image="@{paymentCard.paymentCard}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

        <TextView
                android:id="@+id/card_title"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_size_medium"
                android:layout_marginTop="@dimen/margin_padding_size_large"
                android:text="@{paymentCard.paymentCard.card.name_on_card}"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Business" />

        <TextView
                android:id="@+id/card_digits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_size_medium"
                android:layout_marginBottom="@dimen/margin_padding_size_large"
                android:text="@{String.format(@string/pll_last_digits, paymentCard.paymentCard.card.last_four_digits)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/card_title"
                tools:text="Card ending in 1234" />

        <com.bink.wallet.GradientSwitch
                android:id="@+id/toggle"
                android:layout_width="@dimen/toggle_width"
                android:layout_height="@dimen/margin_padding_size_medium_large"
                android:layout_marginEnd="@dimen/margin_padding_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_separator_line_height"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:background="@color/gray_inactive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>